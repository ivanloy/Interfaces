<Page
    x:Class="_14_SplitViewPractice.Views.home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_14_SplitViewPractice.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>

        <TextBlock Text="Bienvenido" 
                   Name="Bienvenido"
                   HorizontalAlignment="Center" 
                   RelativePanel.AlignTopWithPanel="True"
                   RelativePanel.AlignLeftWithPanel="True"
                   RelativePanel.AlignRightWithPanel="True"
                   FontSize="40"></TextBlock>

        <TextBlock Text="En esta página web usted podrá solo volumenes 1 de sus series favoritas, asi somos :,)"  
                   Name="Descripcion"
                   HorizontalAlignment="Center" 
                   RelativePanel.Below="Bienvenido"
                   RelativePanel.AlignLeftWith="Bienvenido"
                   RelativePanel.AlignRightWith="Bienvenido"
                   FontSize="20"
                   Margin="0,20,0,0"></TextBlock>




    </RelativePanel>
</Page>
